# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space

# 2 space indentation
[*.{ts,tsx,js}]
indent_size = 2

[*.{html,css,json}]
indent_size = 2
